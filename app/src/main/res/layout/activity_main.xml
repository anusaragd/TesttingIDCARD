<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewReader"
            android:layout_width="393dp"
            android:layout_height="match_parent"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/main_button_open"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="Open" />

        <Button
            android:id="@+id/main_button_close"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="Close" />

        <Button
            android:id="@+id/main_button_read"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="Read" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idcard"
            android:layout_width="129dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_text_view_response"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="ID Card"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="คำนำหน้า"
            android:text="" />

        <TextView
            android:id="@+id/textViewFirstNameTH"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:hint="ชื่อ"
            android:text="" />
        <TextView
            android:id="@+id/textViewLastNameTH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="นามสกุล"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:hint="เพศ"
            android:text="" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleEN"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:text="" />

        <TextView
            android:id="@+id/textViewFirstNameEN"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:hint="Firstname"
            android:text="" />
        <TextView
            android:id="@+id/textViewLastNameEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Lastname"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> <!-- Horizontal Orientation set -->

        <TextView
            android:id="@+id/textViewDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="วันเดือนปีเกิด"/>
        <TextView
            android:id="@+id/textViewISSUE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="วันออกบัตร"/>
        <TextView
            android:id="@+id/textViewEXPIRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="วันหมดอายุ"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:hint="ที่อยู่"
            android:text="" />

    </LinearLayout>

</LinearLayout>
